{{#if phonebook.length}}
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Имя</th>
        <th>Телефон</th>
      </tr>
    </thead>
    <tbody>
      {{#each phonebook}}
        <tr {{#unless ../disableRows}}class="clickable"{{else}}class="disabled"{{/unless}} data-id="{{this.id}}">
          <td>{{this.id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.phone}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>В телефонном справочнике пока нет записей.</p>
{{/if}} 